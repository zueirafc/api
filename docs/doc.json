{
  "name":"Zueira F.C. API",
  "for":"Zueira Futebol Clube",
  "current_version":{
    "version":"v1",
    "codename":"Galatasaray",
    "status":"development"
  },
  "who?":{
    "team":{
      "contact":"hackers@zueirafc.com",
      "members":[
        {
          "name":"Bruno Casali",
          "contact":"@brunoocasali",
          "email":"brunoocasali@gmail.com"
        }
      ]
    }
  },
  "start":{
    "why":"We need to keep the zueira in our hearts to cheer this moody life",
    "docs":"We have just a endpoints list, see them below:",
    "license":"MIT",
    "endpoints":[
      {
        "namespace":"api/v1",
        "routes":[
          {
            "full_path":"http://api.zueirafc.com/api/v1/microposts",
            "path":"microposts",
            "path_actions":[
              {
                "action":"index",
                "method":"GET",
                "points":"/"
              },
              {
                "action":"active",
                "method":"GET",
                "points":"/active"
              },
              {
                "action":"pending",
                "method":"GET",
                "points":"/pending"
              },
              {
                "action":"banned",
                "method":"GET",
                "points":"/banned"
              },
              {
                "action":"deleted",
                "method":"GET",
                "points":"/deleted"
              },
              {
                "action":"create",
                "method":"POST",
                "points":"/"
              },
              {
                "action":"show",
                "method":"GET",
                "points":"/:id"
              },
              {
                "action":"delete",
                "method":"POST",
                "points":"/:id/delete"
              },
              {
                "action":"ban",
                "method":"POST",
                "points":"/:id/ban"
              },
              {
                "action":"activate",
                "method":"POST",
                "points":"/:id/activate"
              },
              {
                "action":"update",
                "method":"POST/PUT",
                "points":"/:id"
              },
              {
                "action":"destroy",
                "method":"DELETE",
                "points":"/:id"
              }
            ],
            "allowed_params":[
              {
                "micropost":[
                  "user_id", "source_id", "text", "all_targets", "all_trollers",
                  "status", "shared", "is_shared", "provider_id",
                  "provider_url", "title", 
                  {"trollers_attributes": ["trollerable_id", "trollerable_type"]}, 
                  {"targets_attributes": ["targetable_id", "targetable_type"]}
                ]
              }
            ]
          },
          {
            "full_path":"http://api.zueirafc.com/api/v1/clubs",
            "path":"clubs",
            "path_actions":[
              {
                "action":"index",
                "method":"GET",
                "points":"/"
              },
              {
                "action":"create",
                "method":"POST",
                "points":"/"
              },
              {
                "action":"show",
                "method":"GET",
                "points":"/:id"
              },
              {
                "action":"update",
                "method":"POST/PUT",
                "points":"/:id"
              },
              {
                "action":"destroy",
                "method":"DELETE",
                "points":"/:id"
              }
            ],
            "allowed_params":[
              {
                "club":[
                  "shield", "official_website", "full_name",
                  "official_facebook_page", "short_name", "initials",
                  "official_twitter_pag"
                ]
              }
            ]
          },
          {
            "full_path":"http://api.zueirafc.com/api/v1/sources",
            "path":"sources",
            "path_actions":[
              {
                "action":"index",
                "method":"GET",
                "points":"/"
              },
              {
                "action":"create",
                "method":"POST",
                "points":"/"
              },
              {
                "action":"show",
                "method":"GET",
                "points":"/:id"
              },
              {
                "action":"update",
                "method":"POST/PUT",
                "points":"/:id"
              },
              {
                "action":"destroy",
                "method":"DELETE",
                "points":"/:id"
              }
            ],
            "allowed_params":[
              {
                "source":[
                  "name", "key", "kind", "status", "club_id"
                ]
              }
            ]
          }
        ]
      }
    ],
    "source":"https://github.com/zueirafc/api"
  }
}
