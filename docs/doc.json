{
  "name":"Zueira F.C. API",
  "for":"Zueira Futebol Clube",
  "current_version":{
    "version":"v1",
    "codename":"Galatasaray",
    "status":"development"
  },
  "who?":{
    "team":{
      "contact":"hackers@zueirafc.com",
      "members":[
        {
          "name":"Bruno Casali",
          "contact":"@brunoocasali",
          "email":"brunoocasali@gmail.com"
        }
      ]
    }
  },
  "start":{
    "docs":"no docs, for a while",
    "why":"We need to keep the zueira in our hearts to cheer this moody life",
    "license":"MIT",
    "endpoints":[
      {
        "namespace":"api/v1",
        "routes":[
          {
            "full_path":"http://api.zueirafc.com/api/v1/microposts",
            "path":"microposts",
            "path_actions":[
              {
                "action":"index",
                "method":"GET",
                "points":"/"
              },
              {
                "action":"create",
                "method":"POST",
                "points":"/"
              },
              {
                "action":"show",
                "method":"GET",
                "points":"/show/:id"
              },
              {
                "action":"update",
                "method":"POST/PUT",
                "points":"/:id"
              },
              {
                "action":"destroy",
                "method":"DELETE",
                "points":"/:id"
              }
            ],
            "allowed_params":[
              {
                "micropost":[
                  "organizer_id",
                  "start_at",
                  "finish_at",
                  "name",
                  "event_center_id"
                ]
              }
            ]
          },
          {
            "full_path":"http://api.zueirafc.com/api/v1/clubs",
            "path":"clubs",
            "path_actions":[
              {
                "action":"index",
                "method":"GET",
                "points":"/"
              },
              {
                "action":"create",
                "method":"POST",
                "points":"/"
              },
              {
                "action":"show",
                "method":"GET",
                "points":"/show/:id"
              },
              {
                "action":"update",
                "method":"POST/PUT",
                "points":"/:id"
              },
              {
                "action":"destroy",
                "method":"DELETE",
                "points":"/:id"
              }
            ],
            "allowed_params":[
              {
                "club":[
                  "image",
                  "event_center_id"
                ]
              }
            ]
          },
          {
            "full_path":"http://api.zueirafc.com/api/v1/sources",
            "path":"sources",
            "path_actions":[
              {
                "action":"index",
                "method":"GET",
                "points":"/"
              },
              {
                "action":"create",
                "method":"POST",
                "points":"/"
              },
              {
                "action":"show",
                "method":"GET",
                "points":"/show/:id"
              },
              {
                "action":"update",
                "method":"POST/PUT",
                "points":"/:id"
              },
              {
                "action":"destroy",
                "method":"DELETE",
                "points":"/:id"
              }
            ],
            "allowed_params":[
              {
                "source":[
                  "place_id",
                  "name"
                ]
              }
            ]
          }
        ]
      }
    ],
    "source":"https://github.com/zueirafc/api"
  }
}
